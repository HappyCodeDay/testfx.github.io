// code.
//-------------------------------------------------------------------------------------------------

div#code.ui.basic.segment
  div.container
    div.ui.top.attached.tabular.menu
      a.active.item JUnit 4
    div.ui.bottom.attached.segment
      pre: code.language-java
        include data/example-junit4.txt

